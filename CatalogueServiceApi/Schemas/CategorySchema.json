{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Category Schema",
  "type": "object",
  "properties": {
    "MongoId": {
      "type": "string",
      "description": "The unique identifier generated by MongoDB for the category."
    },
    "CategoryCode": {
      "type": "string",
      "description": "The code representing the category."
    },
    "CategoryName": {
      "type": "string",
      "description": "The name of the category."
    },
    "CategoryDescription": {
      "type": "string",
      "description": "The description of the category."
    },
    "CategoryArtifacts": {
      "type": "array",
      "items": {
        "$ref": "./ArtifactSchema.json"
      },
      "description": "An array of artifacts belonging to the category."
    }
  },
  "required": [ "CategoryCode", "CategoryName", "CategoryDescription" ]
}